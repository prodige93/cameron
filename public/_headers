# Headers de sécurité et performance pour toutes les pages
/*
  # Sécurité
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # HTTPS et sécurité
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Performance - Cache pour les pages HTML
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
  
  # Performance - Compression et optimisation
  Vary: Accept-Encoding
  Accept-CH: DPR, Viewport-Width, Width

# Headers spécifiques pour les assets statiques
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Headers pour les images
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Headers pour les fichiers CSS et JS
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css

/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript

# Headers pour les fonts
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Headers pour les fichiers JSON
/*.json
  Cache-Control: public, max-age=3600

# Headers pour le HTML (cache optimisé avec revalidation)
/*.html
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Vary: Accept-Encoding

# Headers pour le sitemap et robots.txt
/sitemap.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml

/robots.txt
  Cache-Control: public, max-age=3600
  Content-Type: text/plain

